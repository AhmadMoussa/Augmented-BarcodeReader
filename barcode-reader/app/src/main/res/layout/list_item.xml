<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:tag="Bottom2"
        android:background="#333"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/trash"
            android:src="@drawable/ic_delete_black_24px"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FF9800">

        <TextView
            android:id="@+id/list_entry_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="hihihihi"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="viewStart">
        </TextView>

        <View
            android:id="@+id/divider"
            android:layout_below="@+id/list_entry_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/divider"
            />

        <TextView
            android:id="@+id/list_entry_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_entry_title"
            android:textSize="20dp"
            android:text="hi"
            android:textColor="@color/text"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            >
        </TextView>

        <TextView
            android:id="@+id/list_entry_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="hi"
            android:textSize="10dp"
            android:textColor="@color/secondary"
            android:textAlignment="viewStart"
            android:layout_below="@+id/list_entry_title"
            android:layout_alignLeft="@+id/list_entry_title">
        </TextView>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>